@page
@model TodoApp.WebApplication.Pages.TodoItems.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add new task</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TodoItem.Message" class="control-label"></label>
                <input asp-for="TodoItem.Message" class="form-control" />
                <span asp-validation-for="TodoItem.Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
